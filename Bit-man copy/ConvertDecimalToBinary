#include <iostream>
#include <bits/stdc++.h>
#include<algorithm>
#include<stdio.h>
using namespace std ;


int main()
{ 
   int n,ans=0;
   cout<<"Enter the number" <<endl ;
   cin>> n ;

  
    int p = 1 ;
   while (n>0)
   {
       ans =ans + p*(n&1) ;
       p=p*10 ;
       n=n>>1 ;
          }
      cout<<ans ;
    return 0;
}
